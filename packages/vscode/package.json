{
  "name": "commitor-vscode",
  "displayName": "Commitor",
  "description": "AI-powered Git commit message generator with OpenAI & Anthropic support",
  "version": "0.6.0",
  "publisher": "frkngnc",
  "license": "MIT",
  "icon": "resources/icon.png",
  "main": "dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/frkngnc/commitor/tree/main/packages/vscode"
  },
  "keywords": [
    "git",
    "commit",
    "cli",
    "ai",
    "artificial-intelligence",
    "commit-message",
    "commit-message-generator",
    "git-commit",
    "git-cli",
    "openai",
    "chatgpt",
    "gpt-4o",
    "gpt-5",
    "anthropic",
    "claude",
    "conventional-commits",
    "commitizen",
    "git-automation",
    "developer-tools",
    "devtools",
    "productivity",
    "code-quality",
    "best-practices",
    "semantic-commit",
    "commit-helper",
    "ai-assistant",
    "terminal",
    "command-line"
  ],
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "engines": {
    "vscode": "^1.84.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "Commitor needs access to your repository history and staged changes, so it only runs in trusted workspaces."
    }
  },
  "contributes": {
    "commands": [
      {
        "command": "commitor.generateCommitMessage",
        "title": "Generate AI Commit Message",
        "category": "Commitor",
        "icon": "$(sparkle)"
      },
      {
        "command": "commitor.configure",
        "title": "Configure AI Provider (Quick)",
        "category": "Commitor"
      },
      {
        "command": "commitor.openConfigPanel",
        "title": "Open Configuration Panel",
        "category": "Commitor",
        "icon": "$(settings-gear)"
      },
      {
        "command": "commitor.changeLanguage",
        "title": "Change Language",
        "category": "Commitor"
      },
      {
        "command": "commitor.logout",
        "title": "Logout (Clear API Keys)",
        "category": "Commitor"
      },
      {
        "command": "commitor.checkHealth",
        "title": "Check Provider Health",
        "category": "Commitor"
      },
      {
        "command": "commitor.sourceControl.refresh",
        "title": "Refresh",
        "category": "Commitor",
        "icon": "$(refresh)"
      },
      {
        "command": "commitor.sourceControl.changeProvider",
        "title": "Change AI Provider",
        "category": "Commitor",
        "icon": "$(settings)"
      },
      {
        "command": "commitor.sourceControl.changeLanguage",
        "title": "Change Language",
        "category": "Commitor",
        "icon": "$(globe)"
      }
    ],
    "views": {
      "scm": [
        {
          "id": "commitor.sourceControl",
          "name": "Commitor",
          "when": "scmProvider == git"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "commitor.sourceControl",
        "contents": "Stage files to generate AI commit message.\n[⚙️ Configure](command:commitor.configure)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commitor.generateCommitMessage",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ],
      "view/title": [
        {
          "command": "commitor.sourceControl.refresh",
          "when": "view == commitor.sourceControl",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "commitor.sourceControl.changeProvider",
          "when": "view == commitor.sourceControl && viewItem == provider",
          "group": "inline"
        },
        {
          "command": "commitor.sourceControl.changeLanguage",
          "when": "view == commitor.sourceControl && viewItem == language",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "commitor.generateCommitMessage",
          "when": "scmProvider == git"
        },
        {
          "command": "commitor.sourceControl.refresh",
          "when": "false"
        },
        {
          "command": "commitor.sourceControl.changeProvider",
          "when": "false"
        },
        {
          "command": "commitor.sourceControl.changeLanguage",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "Commitor",
      "properties": {
        "commitor.provider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic"
          ],
          "default": "openai",
          "description": "AI provider to use for commit message generation",
          "enumDescriptions": [
            "OpenAI (ChatGPT)",
            "Anthropic (Claude)"
          ]
        },
        "commitor.connectionType": {
          "type": "string",
          "enum": [
            "api",
            "browser"
          ],
          "default": "api",
          "description": "Connection type for AI provider",
          "enumDescriptions": [
            "API Key (fast, reliable)",
            "Browser automation (no API key needed)"
          ]
        },
        "commitor.language": {
          "type": "string",
          "enum": [
            "tr",
            "en",
            "auto",
            "custom"
          ],
          "default": "auto",
          "description": "Language for commit messages",
          "enumDescriptions": [
            "Turkish",
            "English",
            "Auto-detect from README and commit history",
            "Custom language (specify below)"
          ]
        },
        "commitor.customLanguage": {
          "type": "string",
          "default": "",
          "description": "Custom language name (e.g., 'German', 'Spanish') when language is set to 'custom'"
        },
        "commitor.autoGenerate": {
          "type": "boolean",
          "default": false,
          "description": "Automatically generate commit message when staging changes"
        },
        "commitor.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Commitor status in the status bar"
        },
        "commitor.excludeGlobs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Glob patterns for files that should never be sent to the AI provider (e.g., \"**/*.env\", \"**/secrets/**\")"
        },
        "commitor.warnOnBinaryDiffs": {
          "type": "boolean",
          "default": true,
          "description": "Show a confirmation dialog when staged changes contain binary files before sending data to the AI provider"
        },
        "commitor.largeDiffWarningThreshold": {
          "type": "number",
          "default": 2000,
          "description": "Show a confirmation dialog when the total number of changed lines exceeds this value (set to 0 to disable)"
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "npm run build -- --production && vsce package",
    "vscode:prepublish": "npm run build -- --production",
    "compile": "tsc -p ."
  },
  "dependencies": {
    "@commitor/core": "^1.0.0",
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.84.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.21.5",
    "sharp": "^0.34.5",
    "typescript": "^5.2.0"
  }
}
